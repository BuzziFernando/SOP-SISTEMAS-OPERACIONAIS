LISTA DE EXERCICIO TRABALHO SHELL SCRIPR 


1)
      echo "Entre com o seu nome:"
      read Nome
      echo -e "Seu nome e: $nome"

2)
      echo “Entre com o primeiro valor:”
      read valor1
      echo “Entre com o segundo valor:”
      read valor2
      echo Multiplicação = $(($valor1*$valor2))

3)
      #!/bin/bash
      echo "digite um valor"
      read valor1
      if [ $valor1 -lt 0 ]
      then
      echo "valor negativo"
      elif [ $1 -eq 0 ]
      then
        echo "nulo"
      else
        echo "valor positivo"
      fi

4)
    #!/bin/bash
    echo Digite o numero:
    read X
    for Y in 1 2 3 4 5 6 7 8 9
    do
    echo "$X*$Y = $[X*Y]"
    done

5)
      #!/bin/bash
      echo "Entre com 1 = calendario e 2 = lista de arquivos"
      read valor1
      if [ $valor1 -eq 1]
      then
        cal
      elif [ $valor1 -eq 2 ]
      then
        ls
      fi
